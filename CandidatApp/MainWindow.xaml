<Window x:Class="CandidatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:CandidatApp.Views"
        xmlns:viewmodels="clr-namespace:CandidatApp.ViewModels"
        mc:Ignorable="d"
        Title="CandidatApp" Height="540" Width="1000"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:CandidateViewModel}">
            <views:CandidateList />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:PositionsViewModel}">
            <views:PositionList/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:InterviewViewModel}">
            <views:InterviewList/>
        </DataTemplate>

        <Style TargetType="Button" x:Key="FlatButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="0" 
                        BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DDD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Background="#EEE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" VerticalAlignment="Stretch">
            <Button Name="btnCandidates" Command="{Binding ShowCandidatesCommand}" Style="{StaticResource FlatButton}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/hiring.png" Height="40" Width="40"/>
                    <TextBlock Text="Kandidati" Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="20" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </Grid>

        <Grid Grid.Row="2" VerticalAlignment="Stretch">
            <Button Name="btnOpenPositions" Command="{Binding ShowOpenPositionsCommand}" Style="{StaticResource FlatButton}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/open-position.png" Height="40" Width="40"/>
                    <TextBlock Text="Pozicije" Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="20" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </Grid>

        <Grid Grid.Row="3" VerticalAlignment="Stretch">
            <Button Name="btnInterviews" Command="{Binding ShowInterviewsCommand}" Style="{StaticResource FlatButton}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/job-interview.png" Height="40" Width="40"/>
                    <TextBlock Text="Intervjui" Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="20" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </Grid>

        <Grid Grid.Row="4" VerticalAlignment="Stretch">
            <Button Name="btnCalendar" Command="{Binding ShowOpenPositionsCommand}" Style="{StaticResource FlatButton}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/schedule.png" Height="40" Width="40"/>
                    <TextBlock Text="Kalendar" Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="20" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </Grid>

        <Grid Grid.Row="5" VerticalAlignment="Stretch">
            <Button Name="btnDocuments" Command="{Binding ShowOpenPositionsCommand}" Style="{StaticResource FlatButton}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/documentation.png" Height="40" Width="40"/>
                    <TextBlock Text="Dokumenti" Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="20" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="5">
            <ContentControl Content="{Binding CurrentViewModel}" />
        </Grid>

        <Grid Height="80" Margin="10">
            <Image Source="/Images/job-search.png"/>
        </Grid>
        <Grid Grid.Column="1" Height="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel VerticalAlignment="Center"  >
                <TextBlock Text="Prijava danas: 18" FontSize="14" FontWeight="SemiBold" Foreground="Black"/>
                <TextBlock Text="Otvorenih pozicija: 6" FontSize="14" FontWeight="SemiBold" Foreground="Black"/>
            </StackPanel>
            <TextBlock Grid.Column="1" Text="CandiDatApp" FontSize="28" FontWeight="Bold" VerticalAlignment="Center">
                <TextBlock.Foreground>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1976D2" Offset="0"/>
                        <GradientStop Color="#4CAF50" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0">
                <Image Source="/Images/notification.png" Height="24" Cursor="Hand" Margin="10,0"/>
                <Image Source="/Images/email.png" Height="24" Cursor="Hand"
                       ToolTip="Otvori Outlook"
                       MouseLeftButtonUp="OpenOutlook_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
